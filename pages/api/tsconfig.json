{
    "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "incremental": true,
      "module": "esnext",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "target": "esnext",
      "baseUrl": "../",
      "paths": {
        "*": ["api/*", "shared/*"],
      }
    },
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "../shared/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  